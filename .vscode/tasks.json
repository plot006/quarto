{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open MSYS2 Bash and Make",
            "type": "shell",
            "command": "C:\\msys64\\usr\\bin\\bash.exe",
            "args": [
                "-l",            // ログインシェルとして起動
                "-i",            // インタラクティブモードで起動
                "-c",            // コマンド指定
                "cd '${workspaceFolder}' && make clean all"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"    // 新しいターミナルパネルで実行
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
